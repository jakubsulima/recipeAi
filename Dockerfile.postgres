FROM postgres:15

# Create init directory for database initialization scripts
RUN mkdir -p /docker-entrypoint-initdb.d

# Copy any initialization scripts (if you have them)
# COPY ./init-scripts/ /docker-entrypoint-initdb.d/

# Set default locale
ENV LANG=en_US.UTF-8
ENV LANGUAGE=en_US:en
ENV LC_ALL=en_US.UTF-8

# Expose PostgreSQL port
EXPOSE 5432

# The postgres image automatically runs initdb and starts the server
# using the official docker-entrypoint.sh script
